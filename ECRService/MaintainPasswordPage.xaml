<Page x:Class="ECRService.MaintainPasswordPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ECRService"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="400"
      Title="ManagerPage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="2*" />
        </Grid.ColumnDefinitions>
        <PasswordBox x:Name="passwordBox"  Grid.Column="1" Height="20" />
        <Button Grid.Column="2" HorizontalAlignment="Left" Height="20" Width="20" Style="{StaticResource hiddenButton}" IsDefault="True" Click="Password_Click" />
    </Grid>
</Page>
