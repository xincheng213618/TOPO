    <Style x:Key="queryButton" TargetType="{x:Type Button}">
        <Setter Property="FontSize" Value="15" />
        <Setter Property="FontFamily" Value="黑体" />
        <Setter Property="Foreground" Value="White" />
        <Setter Property="Height" Value="35" />
