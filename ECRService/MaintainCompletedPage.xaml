<Page x:Class="ECRService.MaintainCompletedPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ECRService"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="400"
      Title="MaintainCompletedPage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Button Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center" Template="{StaticResource imageButtonTemplate}" Click="ContinueButton_Click">
            <Image Stretch="None" Source="Images/continue.png" />
        </Button>
        <Button Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" Template="{StaticResource imageButtonTemplate}" Click="PowerOffButton_Click">
            <Image Stretch="None" Source="Images/shutdown.png" />
        </Button>
    </Grid>
</Page>
