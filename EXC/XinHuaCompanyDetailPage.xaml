<Page x:Class="EXC.XinHuaCompanyDetailPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"    
      mc:Ignorable="d" 
      d:DesignHeight="1024" d:DesignWidth="1280"
      Title="XinHuaCompanyDetailPage" Initialized="Page_Initialized">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80" />
            <RowDefinition Height="869*" />
            <RowDefinition Height="60"/>
        </Grid.RowDefinitions>
  
        <Border Grid.Row="1" Background="#f5f6f7">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="0*" />
                    <RowDefinition Height="878*" />
                </Grid.RowDefinitions>
                <!--头-->

                <!--内容-->
                <Border Background="#ebecde" Visibility="Visible" Grid.Row="1">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="0"/>
                            <ColumnDefinition Width="210*"/>
                            <ColumnDefinition Width="1067*"/>
                            <ColumnDefinition Width="3"/>
                        </Grid.ColumnDefinitions>

                        <!--功能栏-->
                        <Grid  Grid.Column="1">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="8" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="8" />
                            </Grid.RowDefinitions>
                            <Label x:Name="FontWeightBoldLabel" FontWeight="Bold" Visibility="Hidden"/>
                            <Label x:Name="FontWeightNormalLabel" FontWeight="Normal" Visibility="Hidden"/>
                            <Button x:Name="basicButton" Grid.Column="0" Background="White"  BorderBrush="#dadada" BorderThickness="1" Margin="0,8,10,3" Click="BasicInfo_Click" Grid.RowSpan="2" >
                                <Label x:Name="BasicLabel" Style="{StaticResource Label_Centered_25}"  Content="基本信息" FontWeight="Bold"/>
                            </Button>
                            <Button x:Name="EquityButton" Grid.Row="2" Grid.Column="0" Background="White" BorderBrush="#dadada" BorderThickness="1"  Margin="0,3,10,3" Click="Equity_Info_Click" Visibility="Visible">
                                <Label x:Name="EquityLabel" Style="{StaticResource Label_Centered_25}"  Content="股权信息"/>
                            </Button>
                            <Button x:Name="PropertyButton" Grid.Row="3" Grid.Column="0" Background="White" BorderBrush="#dadada" BorderThickness="1"  Margin="0,3,10,3" Click="Property_Info_Click">
                                <Label x:Name="PropertyLabel"  Style="{StaticResource Label_Centered_25}"  Content="知识产权"/>
                            </Button>
                            <Button x:Name="JudicialButton" Grid.Row="4" Grid.Column="0" Background="White" BorderBrush="#dadada" BorderThickness="1"  Margin="0,3,10,3" Click="Judicial_Click">
                                <Label x:Name="JudicialLabel" Style="{StaticResource Label_Centered_25}" Content="司法信息"/>
                            </Button>
                            <Button x:Name="TrademarkButton" Grid.Row="5" Grid.Column="0" Background="White" BorderBrush="#dadada" BorderThickness="1"  Margin="0,3,10,3" Click="Trademark_Click">
                                <Label x:Name="TrademarkLabel" Style="{StaticResource Label_Centered_25}" Content="商标信息"/>
                            </Button>
                            <Button x:Name="HomeButton" Grid.Row="8" Grid.Column="0" Background="White" BorderBrush="#dadada" BorderThickness="1"  Margin="0,3,10,3" Click="Home_Click">
                                <Label  Style="{StaticResource Label_Centered_25}" Content="返回主页"/>
                            </Button>



                        </Grid>

                        <!--内容详情-->
                        <Grid Grid.Column="2" >
                            <Grid.RowDefinitions>
                                <RowDefinition Height="6" />
                                <RowDefinition Height="31*" />
                                <RowDefinition Height="5" />
                                <RowDefinition Height="255*"/>
                            </Grid.RowDefinitions>
                            <!--标题-->
                            <Border Grid.Row="1" Background="White" Margin="0,0,0,4" >
                                <Grid>
                                    <Border Grid.Column="0" Background="#378afc"  BorderBrush="#f5f6f7" BorderThickness="4,0,0,4" HorizontalAlignment="Right" CornerRadius="5" VerticalAlignment="Top">
                                        <Button Style="{StaticResource hiddenButton}"  Click="Return_Click"  >
                                            <Label  Style="{StaticResource Label_Centered_25}" Height="50" Width="80" Foreground="White" Content="返回"/>
                                        </Button>
                                    </Border>
                                    <Border Grid.Column="0" Background="#378afc"  BorderBrush="#f5f6f7" BorderThickness="4,0,0,4" HorizontalAlignment="Right" CornerRadius="5" VerticalAlignment="Top" Margin="80,0">
                                        <Button Style="{StaticResource hiddenButton}"  Click="Print_Click" Visibility="Visible" >
                                            <Label  Style="{StaticResource Label_Centered_25}" Height="50" Width="80" Foreground="White" Content="打印"/>
                                        </Button>
                                    </Border>



                                    <Label x:Name="InFoTitle" Grid.Row="0"  Style="{StaticResource Label_Centered_30}"  Content="基本信息" Margin="108,22,167,21" Width="792"/>
                                    <Label x:Name="comanpyStatusLabel"  Style="{StaticResource Label_Right_24}" FontSize="17" BorderBrush="#35c46d"  BorderThickness="1,1,1,1" Content="存续" Foreground="#35c46d" Padding="5 0 5 2" />
                                    <!--计时器-->
                                    <ProgressBar  HorizontalAlignment="Left"  Value="{Binding Countdown, Mode=OneWay}" Width="60" Height="60" Margin="24,10,0,9" MouseDoubleClick="ProgressBar_MouseDoubleClick">
                                        <ProgressBar.Template>
                                            <ControlTemplate TargetType="{x:Type ProgressBar}">
                                                <Border Background="{TemplateBinding Value, ConverterParameter=90, Converter={StaticResource ValueToProcessConverter}}"/>
                                            </ControlTemplate>
                                        </ProgressBar.Template>
                                    </ProgressBar>
                                    <!--<Label Grid.Row="0" Grid.Column="1" x:Name="declaration" Style="{StaticResource company_info_button_titleLabel14}"  Margin="30,0,0,0"/>-->
                                </Grid>
                            </Border>

                            <!--基本信息-->
                            <Border  Grid.Row="2" x:Name="BasicInfoShow" Background="White" Visibility="Visible" Grid.RowSpan="2">
                                <Grid>
                                    <Border x:Name="BasicInfoListView" Visibility="Visible">
                                        <ScrollViewer ManipulationBoundaryFeedback="SCManipulationBoundaryFeedback" HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Hidden" >
                                            <WrapPanel >
                                                <Grid>
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="0*" />
                                                        <RowDefinition Height="48*" />
                                                        <RowDefinition Height="107*" />
                                                        <RowDefinition Height="35*" />
                                                        <RowDefinition Height="35*" />
                                                        <RowDefinition Height="35*" />
                                                        <RowDefinition Height="35*" />
                                                        <RowDefinition Height="35*" />
                                                        <RowDefinition Height="35*" />
                                                        <RowDefinition Height="35*" />
                                                        <RowDefinition Height="35*" />

                                                        <RowDefinition Height="35*" />
                                                        <RowDefinition Height="0*" />
                                                    </Grid.RowDefinitions>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="123"/>
                                                        <ColumnDefinition Width="687"/>
                                                        <ColumnDefinition Width="213"/>
                                                    </Grid.ColumnDefinitions>


                                                    <Label x:Name="labelCreditCode" Grid.Row="1" Grid.Column="1" Style="{StaticResource Label_Centered_20}" Content="社会统一信用代码：" VerticalAlignment="Bottom" />
                                                    <Label x:Name="labelfrName" Grid.Row="2" Grid.Column="1" Style="{StaticResource Label_Centered_20}" Content="法定代表人："  />
                                                    <Label x:Name="labelstartDate" Grid.Row="3" Grid.Column="1" Style="{StaticResource Label_Centered_20}" Content="成立时间："  />
                                                    <Label x:Name="labelindustry" Grid.Row="4" Grid.Column="1"  Style="{StaticResource Label_Centered_20}" Content="行业：" />
                                                   
                                                    <Label x:Name="labelphoneNumber" Grid.Row="6" Grid.Column="1"  Style="{StaticResource Label_Centered_20}" Content="联系方式："  />
                                                    <Label x:Name="entType" Grid.Row="5" Grid.Column="1"  Style="{StaticResource Label_Centered_20}" Content="企业类型："  />
                                                    <Label x:Name="labeladdress" Grid.Row="8" Grid.Column="1" Style="{StaticResource Label_Centered_20}" Content="地址："/>

                                                    <Label  Grid.Row="10" Grid.Column="1"  Style="{StaticResource Label_Centered_20}" Content="经营范围：" Height="35" Width="110" />
                                                    <TextBox x:Name="labelscpoe" Grid.Column="1" Style="{StaticResource Text_Centered_20}" IsReadOnly="True"  Margin="97,10,0,-375" Grid.Row="10" TextWrapping="Wrap" FontSize="17" Text="" VerticalAlignment="Top" BorderBrush="White" Height="400" Width="590" BorderThickness="0" AllowDrop="False" Grid.RowSpan="4"/>
                                                    <Border Grid.Row="0" Grid.Column="1" BorderBrush="White" BorderThickness="0 0 0 2"  Grid.ColumnSpan="1" Margin="4,2,-4,21"/>
                                                </Grid>
                                            </WrapPanel>
                                        </ScrollViewer>
                                    </Border>
                                    <Border x:Name="BasicInfoMsg"  Background="White" Visibility="Hidden">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="100"/>
                                                <RowDefinition Height="*"/>
                                            </Grid.RowDefinitions>
                                            <Label x:Name="BasicInfoMsgLabel" Content="暂无该企业信息" Style="{StaticResource Label_Centered_25}" Height="100" BorderBrush="#f5f6f7" HorizontalAlignment="Stretch" BorderThickness="0 0 0 3"/>
                                        </Grid>
                                    </Border>
                                </Grid>
                            </Border>

                            <!--知识产权-->
                            <Border Grid.Row="2" x:Name="PropertyInfoShow" Background="White" Visibility="Hidden" Grid.RowSpan="2">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="48" />
                                        <RowDefinition Height="*" />
                                    </Grid.RowDefinitions>
                                    <!--上部-->
                                    <Border Grid.Row="0">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="116*"/>
                                                <ColumnDefinition Width="159*"/>
                                                <ColumnDefinition Width="748*"/>
                                            </Grid.ColumnDefinitions>

                                            <Button  Grid.Row="0" Grid.Column="0" Background="White" BorderBrush="#dadada" BorderThickness="0,0,3,3"  Margin="0,0,0,0" Click="Patent_Click">
                                                <Label x:Name="patentLabel" Grid.Column="1" Style="{StaticResource Label_Centered_20}"  Content="专利" FontWeight="Bold"/>
                                            </Button>

                                            <Button   Grid.Row="0" Grid.Column="1" Background="White" BorderBrush="#dadada" BorderThickness="0,0,3,3" Margin="0,0,0,0"  Click="Copyright_Click">
                                                <Label  x:Name="copyrightLabel"  Style="{StaticResource Label_Centered_20}" Content="软件著作权"/>
                                            </Button>

                                        </Grid>
                                    </Border>
                                    <!--专利信息-->
                                    <Border x:Name="patentGrid" Grid.Row="1"  Visibility="Visible">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="36"/>
                                                <RowDefinition Height="*" />
                                                <RowDefinition Height="48"/>
                                            </Grid.RowDefinitions>
                                            <!--标题-->
                                            <Border Grid.Row="0" Background="#ade7f6" BorderBrush="#f5f6f7" BorderThickness="0 1 0 1" Visibility="Visible">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="86*"/>
                                                        <ColumnDefinition Width="375*"/>
                                                        <ColumnDefinition Width="198*"/>
                                                        <ColumnDefinition Width="210*"/>
                                                        <ColumnDefinition Width="153*"/>
                                                    </Grid.ColumnDefinitions>
                                                    <Label x:Name="column0patentLabel" Grid.Column="0" Style="{StaticResource Label_Centered_20}" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center" BorderBrush="#f5f6f7" BorderThickness="0 0 1 0" Content="序号"     />
                                                    <Label x:Name="column1patentLabel" Grid.Column="1" Style="{StaticResource Label_Centered_20}" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center" BorderBrush="#f5f6f7" BorderThickness="1 0 1 0" Content="专利名称"  />
                                                    <Label x:Name="column2patentLabel" Grid.Column="2" Style="{StaticResource Label_Centered_20}" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center" BorderBrush="#f5f6f7" BorderThickness="1 0 1 0" Content="公示号"    />
                                                    <Label x:Name="column3patentLabel" Grid.Column="3" Style="{StaticResource Label_Centered_20}" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center" BorderBrush="#f5f6f7" BorderThickness="1 0 1 0"  Content="专利类型"   />
                                                    <Label x:Name="column4patentLabel" Grid.Column="4" Style="{StaticResource Label_Centered_20}" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center" BorderBrush="#f5f6f7" BorderThickness="1 0 0 0" Content="公开日期" />
                                                </Grid>
                                            </Border>

                                            <!--list-->
                                            <ListView  Grid.Row="1" x:Name="patentListView" AllowDrop="False" ManipulationBoundaryFeedback="SCManipulationBoundaryFeedback" ScrollViewer.HorizontalScrollBarVisibility="Disabled" ScrollViewer.VerticalScrollBarVisibility="Disabled" Background="Transparent" BorderThickness="0,0,0,0" BorderBrush="White" Visibility="Visible" SelectionChanged="patentListView_SelectionChanged" >
                                                <ListView.ItemContainerStyle>
                                                    <Style TargetType="{x:Type ListBoxItem}">
                                                        <Setter Property="Height" Value="60" />
                                                        <Setter Property="Background" Value="{Binding Path=Background}"/>
                                                        <Setter Property="FontSize" Value="14" />
                                                        <Setter Property="HorizontalContentAlignment" Value="Center" />
                                                        <Setter Property="VerticalContentAlignment" Value="Center" />
                                                        <Setter Property="BorderBrush" Value="#f5f6f7" />
                                                        <Setter Property="BorderThickness" Value="0,1,0,1" />
                                                    </Style>
                                                </ListView.ItemContainerStyle>
                                                <ListView.View>
                                                    <GridView ColumnHeaderContainerStyle="{StaticResource hideHeader}">
                                                        <GridViewColumn x:Name="column0patentHeader" Width="86" Header="序号">
                                                            <GridViewColumn.CellTemplate>
                                                                <DataTemplate>
                                                                    <TextBlock Text="{Binding Path=xh}"/>
                                                                </DataTemplate>
                                                            </GridViewColumn.CellTemplate>
                                                        </GridViewColumn>
                                                        <GridViewColumn x:Name="column1patentHeader" Width="371" Header="专利名称">
                                                            <GridViewColumn.CellTemplate>
                                                                <DataTemplate>
                                                                    <TextBlock Text="{Binding Path=title}" />
                                                                </DataTemplate>
                                                            </GridViewColumn.CellTemplate>
                                                        </GridViewColumn>
                                                        <GridViewColumn x:Name="column2patentHeader" Width="196" Header="公示号">
                                                            <GridViewColumn.CellTemplate>
                                                                <DataTemplate>
                                                                    <TextBlock Text="{Binding Path=publicNumber}"/>
                                                                </DataTemplate>
                                                            </GridViewColumn.CellTemplate>
                                                        </GridViewColumn>
                                                        <GridViewColumn x:Name="column3patentHeader" Width="210" Header="专利类型">
                                                            <GridViewColumn.CellTemplate>
                                                                <DataTemplate>
                                                                    <TextBlock Text="{Binding Path=kindCodeCesc}" />
                                                                </DataTemplate>
                                                            </GridViewColumn.CellTemplate>
                                                        </GridViewColumn>
                                                        <GridViewColumn x:Name="column4patentHeader" Width="153" Header="公开日期">
                                                            <GridViewColumn.CellTemplate>
                                                                <DataTemplate>
                                                                    <TextBlock Text="{Binding Path=publicDate}"/>
                                                                </DataTemplate>
                                                            </GridViewColumn.CellTemplate>
                                                        </GridViewColumn>
                                                    </GridView>
                                                </ListView.View>
                                            </ListView>
                                            <!--无数据时-->
                                            <Border x:Name="patentMsg" Grid.Row="1" Visibility="Hidden" Background="White">
                                                <Grid>
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="50"/>
                                                        <RowDefinition Height="*"/>
                                                    </Grid.RowDefinitions>
                                                    <Label Content="暂无专利信息" Style="{StaticResource Label_Centered_25}" BorderBrush="#f5f6f7" HorizontalAlignment="Stretch" BorderThickness="0 0 0 3"/>
                                                </Grid>
                                            </Border>
                                            <Border x:Name="PatentNextPageBorder" Grid.Row="2" Grid.Column="0" Visibility="Visible" Background="White" BorderBrush="#c5c5c5" BorderThickness="0,2,0,0"  >
                                                <Grid>
                                                    <Border Width="250" CornerRadius="10" Background="#378afc" Margin="0,3,0,3">
                                                        <Button Template="{StaticResource imageButtonTemplate}" Click="NextPage_Click" >
                                                            <Label  Content="加载更多"  FontSize="25" Foreground="White"/>
                                                        </Button>
                                                    </Border>
                                                </Grid>
                                            </Border>
                                            <!--弹出用户-->
                                            <Border x:Name="PopPatentBorder" Grid.Row="1" Background="White" BorderBrush="#c5c5c5" BorderThickness="5" CornerRadius="5" Margin="60" Visibility="Hidden">

                                                <Grid Width="860" Height="480">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*"/>
                                                    </Grid.ColumnDefinitions>
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="41*"/>
                                                        <RowDefinition Height="199*"/>
                                                    </Grid.RowDefinitions>
                                                    <Label Content="专利详细内容" Style="{StaticResource Label_Centered_30}"/>
                                                    <TextBox x:Name="PatentDescriptionText" Grid.Row="1" Text="" FontSize="20" AllowDrop="True" IsReadOnly="True" TextWrapping="Wrap"  Height="400" Width="820" BorderThickness="0" />
                                                    <Button Style="{StaticResource hiddenButton}" Click="PopClose_Click" Grid.ColumnSpan="9" Grid.RowSpan="9"/>
                                                </Grid>
                                            </Border>
                                            <Label x:Name="PatentNowTotalLabel"  Grid.Row="2" Grid.Column="0" Style="{StaticResource NowTotalLabel}" />
                                            <Label x:Name="PatenttotalLabel"  Grid.Row="2" Grid.Column="0" Style="{StaticResource TotalLabel}" />
                                        </Grid>
                                    </Border>
                                    <!--软件著作权信息-->
                                    <Border   x:Name="copyrightGrid" Grid.Row="1"  Visibility="Hidden">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="36"/>
                                                <RowDefinition Height="*" />
                                                <RowDefinition Height="48"/>
                                            </Grid.RowDefinitions>
                                            <!--标题-->
                                            <Border Grid.Row="0" Background="#ade7f6" BorderBrush="#f5f6f7" BorderThickness="0 1 0 1" Visibility="Visible">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="86*"/>
                                                        <ColumnDefinition Width="338*"/>
                                                        <ColumnDefinition Width="173*"/>
                                                        <ColumnDefinition Width="0*"/>
                                                        <ColumnDefinition Width="141*"/>
                                                        <ColumnDefinition Width="132*"/>
                                                        <ColumnDefinition Width="153*"/>
                                                    </Grid.ColumnDefinitions>

                                                    <Label x:Name="column0copyrightLabel" Grid.Column="0" Style="{StaticResource Label_Centered_20}" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center" BorderBrush="#f5f6f7" BorderThickness="0 0 1 0" Content="序号" Height="34" Margin="0,6" />
                                                    <Label x:Name="column1copyrightLabel" Grid.Column="1" Style="{StaticResource Label_Centered_20}" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center" BorderBrush="#f5f6f7" BorderThickness="1 0 1 0" Content="名称" Height="34" Margin="0,6" />
                                                    <Label x:Name="column2copyrightLabel" Grid.Column="2" Style="{StaticResource Label_Centered_20}" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center" BorderBrush="#f5f6f7" BorderThickness="1 0 1 0" Content="登记号" Height="34" Margin="0,6" />
                                                    <Label x:Name="column3copyrightLabel" Grid.Column="3" Style="{StaticResource Label_Centered_20}" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center" BorderBrush="#f5f6f7" BorderThickness="1 0 1 0" Content="著作权人" Height="34" Margin="0,6" />
                                                    <Label x:Name="column4copyrightLabel" Grid.Column="4" Style="{StaticResource Label_Centered_20}" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center" BorderBrush="#f5f6f7" BorderThickness="1 0 1 0" Content="登记日期" Height="34" Margin="0,6" />
                                                    <Label x:Name="column5copyrightLabel" Grid.Column="5" Style="{StaticResource Label_Centered_20}" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center" BorderBrush="#f5f6f7" BorderThickness="1 0 1 0" Content="作品类型" Height="34" Margin="0,6" />
                                                    <Label x:Name="column6copyrightLabel" Grid.Column="6" Style="{StaticResource Label_Centered_20}" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center" BorderBrush="#f5f6f7" BorderThickness="1 0 0 0" Content="公布日期" Height="34" Margin="0,6" />
                                                </Grid>
                                            </Border>

                                            <!--list-->
                                            <ListView x:Name="CopyrightListView" Grid.Row="1" AllowDrop="False"  ManipulationBoundaryFeedback="SCManipulationBoundaryFeedback" ScrollViewer.HorizontalScrollBarVisibility="Disabled"  ScrollViewer.VerticalScrollBarVisibility="Disabled" BorderThickness="0,0,0,0" BorderBrush="White" Visibility="Visible" SelectionChanged="copyrightListView_SelectionChanged">
                                                <ListView.ItemContainerStyle>
                                                    <Style TargetType="{x:Type ListBoxItem}">
                                                        <Setter Property="Height" Value="60" />
                                                        <Setter Property="Background" Value="{Binding Path=Background}" />
                                                        <Setter Property="FontSize" Value="14" />
                                                        <Setter Property="HorizontalContentAlignment" Value="Center" />
                                                        <Setter Property="VerticalContentAlignment" Value="Center" />
                                                        <Setter Property="BorderBrush" Value="#F1F1F1" />
                                                        <Setter Property="BorderThickness" Value="0,1,0,0" />
                                                        <Setter Property="Focusable" Value="False" />
                                                    </Style>
                                                </ListView.ItemContainerStyle>
                                                <ListView.View>
                                                    <GridView ColumnHeaderContainerStyle="{StaticResource hideHeader}">
                                                        <GridViewColumn x:Name="column0copyrightHeader" Width="86" Header="序号" DisplayMemberBinding="{Binding Path=xh}"/>
                                                        <GridViewColumn x:Name="column1copyrightHeader" Width="338" Header="名称">
                                                            <GridViewColumn.CellTemplate>
                                                                <DataTemplate>
                                                                    <TextBlock Text="{Binding Path=name}" />
                                                                </DataTemplate>
                                                            </GridViewColumn.CellTemplate>
                                                        </GridViewColumn>
                                                        <GridViewColumn x:Name="column2copyrightHeader" Width="173" Header="登记号">
                                                            <GridViewColumn.CellTemplate>
                                                                <DataTemplate>
                                                                    <TextBlock Text="{Binding Path=regNum}"/>
                                                                </DataTemplate>
                                                            </GridViewColumn.CellTemplate>
                                                        </GridViewColumn>
                                                        <GridViewColumn x:Name="column3copyrightHeader" Width="0" Header="著作权人">
                                                            <GridViewColumn.CellTemplate>
                                                                <DataTemplate>
                                                                    <TextBlock Text="{Binding Path=owner}"/>
                                                                </DataTemplate>
                                                            </GridViewColumn.CellTemplate>
                                                        </GridViewColumn>
                                                        <GridViewColumn x:Name="column4copyrightHeader" Width="141" Header="登记日期">
                                                            <GridViewColumn.CellTemplate>
                                                                <DataTemplate>
                                                                    <TextBlock Text="{Binding Path=regDate}" />
                                                                </DataTemplate>
                                                            </GridViewColumn.CellTemplate>
                                                        </GridViewColumn>
                                                        <GridViewColumn x:Name="column5copyrightHeader" Width="132" Header="作品类型">
                                                            <GridViewColumn.CellTemplate>
                                                                <DataTemplate>
                                                                    <TextBlock Text="{Binding Path=category}" />
                                                                </DataTemplate>
                                                            </GridViewColumn.CellTemplate>
                                                        </GridViewColumn>
                                                        <GridViewColumn x:Name="column6copyrightHeader" Width="153" Header="公布日期">
                                                            <GridViewColumn.CellTemplate>
                                                                <DataTemplate>
                                                                    <TextBlock Text="{Binding Path=publishDate}" />
                                                                </DataTemplate>
                                                            </GridViewColumn.CellTemplate>
                                                        </GridViewColumn>
                                                    </GridView>
                                                </ListView.View>
                                            </ListView>
                                            <!--无数据时-->
                                            <Border x:Name="copyrightMsg" Grid.Row="1" Visibility="Hidden" Background="White">
                                                <Grid>
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="50"/>
                                                        <RowDefinition Height="*"/>
                                                    </Grid.RowDefinitions>
                                                    <Label Content="暂无软件著作权信息" Style="{StaticResource Label_Centered_25}" BorderBrush="#f5f6f7" HorizontalAlignment="Stretch" BorderThickness="0 0 0 3"/>
                                                </Grid>
                                            </Border>

                                            <Border x:Name="CopyrightNextPageBorder" Grid.Row="2" Grid.Column="0" Visibility="Visible" Background="White" BorderBrush="#c5c5c5" BorderThickness="0,2,0,0"  >
                                                <Grid>
                                                    <Border Width="250" CornerRadius="10" Background="#378afc" Margin="0,3,0,3">
                                                        <Button Template="{StaticResource imageButtonTemplate}" Click="NextPage_Click" >
                                                            <Label  Content="加载更多"  FontSize="25" Foreground="White"/>
                                                        </Button>
                                                    </Border>
                                                </Grid>
                                            </Border>
                                            <Label x:Name="CopyrightNowTotalLabel"  Grid.Row="2" Grid.Column="0" Style="{StaticResource NowTotalLabel}" />
                                            <Label x:Name="CopyrighttotalLabel"  Grid.Row="2" Grid.Column="0" Style="{StaticResource TotalLabel}" />

                                        </Grid>
                                    </Border>
                                </Grid>
                            </Border>

                            <!--商标-->
                            <Border Grid.Row="2" x:Name="TrademarkShow" Background="White" Visibility="Hidden" Grid.RowSpan="2">
                                <Grid  Margin="0 0 0 0">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="36"/>
                                        <RowDefinition/>
                                        <RowDefinition Height="48"/>
                                    </Grid.RowDefinitions>
                                    <Border Grid.Row="0" Background="#ade7f6" BorderBrush="#f5f6f7" BorderThickness="0 1 0 1">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="86*"/>
