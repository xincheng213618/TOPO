<Page x:Class="XinHua.XinHuaCompanyDetailPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:XinHua"
      mc:Ignorable="d" 
      d:DesignHeight="1024" d:DesignWidth="1280"
      Title="XinHuaCompanyDetailPage" Initialized="Page_Initialized">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80" />
            <RowDefinition Height="*" />
            <RowDefinition Height="60"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="1">
            <Border Background="#c5c5c5" Opacity="0.05"/>
            <Border Grid.Row="1" Background="#b6c2eb"  CornerRadius="40" Margin="30,50,30,10"  Opacity="0.4" />
        </Grid>
        <Grid x:Name="TOP" Grid.Row="1">
            <Label Grid.Row="1"  Foreground="White" FontSize="20" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,5" >
                <TextBlock Text="{Binding Countdown,StringFormat=剩余操作时间：{0}s}"/>
            </Label>

            <Button Template="{StaticResource imageButtonTemplate}"   HorizontalAlignment="Right" VerticalAlignment="Top"  Height="50" Margin="100,0" Click="Button_Click"  Tag="Home" >
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Image Grid.Column="0" Source="Images/首页.png" Stretch="Uniform" Height="30" Margin="0,5,0,0"/>
                    <Label Grid.Column="1" Content="主页"  FontSize="25" Foreground="#ff8160" />
                </Grid>
            </Button>

            <Button  Template="{StaticResource imageButtonTemplate}" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="200,0" Height="50" Click="Button_Click" Tag="Return" >
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Image Grid.Column="0" Source="Images/返回.png" Stretch="Uniform" Height="30" Margin="0,5,0,0"/>
                    <Label Grid.Column="1" Content="返回"  FontSize="25" Foreground="#ff8160" />
                </Grid>
            </Button>

            <Button  Template="{StaticResource imageButtonTemplate}"  HorizontalAlignment="Right" VerticalAlignment="Top" Margin="300,0" Height="50"  Click="Button_Click" Tag="Print">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Image Grid.Column="0" Source="Images/打印.png" Stretch="Uniform" HorizontalAlignment="Right" Height="30"/>
                    <Label Grid.Column="1" Content="打印" VerticalAlignment="Center" FontSize="25" Foreground="#ff8160" />
                </Grid>
            </Button>

        </Grid>


        <Grid Grid.Row="1" Margin="30,50,30,10">
            <Border Background="Black" VerticalAlignment="Top" Height="60" CornerRadius="40,40,0,0" Opacity="0.1"/>
            <Label  x:Name="InFoTitle"  Style="{StaticResource Label_Centered_30}"  Content="" FontSize="40" VerticalAlignment="Top"   Foreground="#ff8d62"/>
            <Label x:Name="comanpyStatusLabel" Grid.Row="0" Style="{StaticResource Label_Right_24}" VerticalAlignment="Top"  FontSize="12" BorderBrush="#35c46d"  BorderThickness="1,1,1,1" Padding="5,2,5,2"  Content="存续" Foreground="#35c46d"  Margin="50,25,50,10" />

            <Grid Grid.Row="1" Margin="0,57,0,3" >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <!--目录-->
                <Grid Grid.Column="0" Margin="30,10,10,10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                       
                    </Grid.RowDefinitions>
                    <Label x:Name="FontWeightBoldLabel" FontWeight="Bold" Visibility="Hidden"/>
                    <Label x:Name="FontWeightNormalLabel" FontWeight="Normal" Visibility="Hidden"/>
                    <Border x:Name="basicBorder" Grid.Row="0"  Background="#bedffc"  CornerRadius="10" Margin="0,3,10,20">
                        <Button x:Name="basicButton"  Style="{StaticResource hiddenButton}"   Content="基本信息" FontSize="26" FontWeight="Bold" Foreground="#ff8160"  Click="PageChange_Click" Tag="Basic"/>
                    </Border>
                    <Border x:Name="EquityBorder" Grid.Row="1"  Background="#eeeeef"   CornerRadius="10" Margin="0,3,10,20">
                        <Button x:Name="EquityButton" Style="{StaticResource hiddenButton}" Content="股权信息" FontSize="25"   Click="PageChange_Click" Tag="Equity"/>
                    </Border>
                    <Border x:Name="PropertyBorder" Grid.Row="2"  Background="#eeeeef"   CornerRadius="10" Margin="0,3,10,20">
                        <Button x:Name="PropertyButton" Style="{StaticResource hiddenButton}" Content="知识产权" FontSize="25"  Click="PageChange_Click" Tag="Property"/>
                    </Border>
                    <Border x:Name="JudicialBorder" Grid.Row="3"  Background="#eeeeef"   CornerRadius="10" Margin="0,3,10,20">
                        <Button x:Name="JudicialButton" Style="{StaticResource hiddenButton}" Content="司法信息" FontSize="25" Click="PageChange_Click" Tag ="Judicial"/>
                    </Border>
                    <Border x:Name="TrademarkBorder" Grid.Row="4"  Background="#eeeeef"   CornerRadius="10" Margin="0,3,10,20">
                        <Button x:Name="TrademarkButton" Style="{StaticResource hiddenButton}" Content="商标信息" FontSize="25"  Click="PageChange_Click" Tag ="Trademark"/>
                    </Border>
                    <Border Grid.Row="5"  Background="#eeeeef"   CornerRadius="10" Margin="0,3,10,20" Visibility="Hidden">
                        <Button  Style="{StaticResource hiddenButton}" Content="信用中国" FontSize="25"  Click="Button_Click" Tag ="CreditChina"/>
                    </Border>

                </Grid>
                <!--页面-->
                <Grid  Grid.Column="1" Margin="0,10,20,20">
                    <Border Grid.Column="1"  Background="White" CornerRadius="5,5,30,20"/>

                    <!--基本信息-->
                    <Grid x:Name="BasicInfoShow" Background="White" Margin="15,15,15,15" Panel.ZIndex="1">
                        <Grid  Margin="150,10,40,0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="12*" />
                            </Grid.RowDefinitions>
                            <Label x:Name="labelCreditCode" Grid.Row="0"  Style="{StaticResource CompanyBasicInfoLabel}"  Content="社会统一信用代码：" />
                            <Label x:Name="labelfrName" Grid.Row="1" Style="{StaticResource CompanyBasicInfoLabel}" Content="法定代表人："   />
                            <Label x:Name="labelstartDate" Grid.Row="2"  Style="{StaticResource CompanyBasicInfoLabel}" Content="成立时间："   />
                            <Label x:Name="labelindustry" Grid.Row="3"   Style="{StaticResource CompanyBasicInfoLabel}" Content="行业："  />
                            <Label x:Name="labelphoneNumber" Grid.Row="4"   Style="{StaticResource CompanyBasicInfoLabel}" Content="联系方式："  />
                            <Label x:Name="entType" Grid.Row="5"  Style="{StaticResource CompanyBasicInfoLabel}" Content="企业类型：" />
                            <Label x:Name="labeladdress" Grid.Row="6" Style="{StaticResource CompanyBasicInfoLabel}" Content="地址：" />
                            <Label  Grid.Row="7" VerticalAlignment="Top"  Style="{StaticResource CompanyBasicInfoLabel}" Content="经营范围：" />
                            <TextBox x:Name="labelscpoe" Grid.Row="8" Style="{StaticResource Text_Centered_20}" IsReadOnly="True"  TextWrapping="Wrap" FontSize="15" Text="" FontFamily="宋体" VerticalAlignment="Top" BorderBrush="White"  Margin="100,10,0,0"  AllowDrop="False" />

                        </Grid>
                    </Grid>

                    <!--股权信息-->
                    <Grid x:Name="EquityInfoShow" Background="White" Margin="15,15,15,15" Panel.ZIndex="0">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="48"/>
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>
                            <!--上部-->
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Button x:Name="PartnersButton" Grid.Column="0" Content="股权分配" FontSize="20" FontWeight="Bold" Foreground="#ff8160"   BorderThickness="0" Background="#e6f1fb" Margin="0,0,10,3"  Click="Button_Equity_Click" Tag="Partners"/>
                                <Button x:Name="InvestmentButton" Grid.Column="1" Content="投资信息" FontSize="20" FontWeight="Bold"  BorderThickness="0"  Background="White"  Margin="10,0,10,3"   Click="Button_Equity_Click" Tag="Investment"/>
                                <Button x:Name="BranchButton" Grid.Column="2" Content="分支机构" FontSize="20" FontWeight="Bold" BorderThickness="0"  Background="White" Margin="10,0,10,3"   Click="Button_Equity_Click" Tag="Branch" />
                            </Grid>

                            <!--股权分配-->
                            <Grid x:Name="PartnersGrid" Grid.Row="1" Background="White" Panel.ZIndex="1">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="36"/>
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="48"/>
                                </Grid.RowDefinitions>
                                <!--标题-->
                                <Grid Grid.Row="0" Background="#ade7f6">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="54*"/>
                                        <ColumnDefinition Width="205*"/>
                                        <ColumnDefinition Width="305*"/>
                                        <ColumnDefinition Width="305*"/>
                                        <ColumnDefinition Width="172*"/>
                                    </Grid.ColumnDefinitions>
                                    <Label Grid.Column="0" Style="{StaticResource Label_Centered_20}" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center" BorderBrush="#f5f6f7" BorderThickness="0 0 1 0" Content="序号" Height="34" />
                                    <Label Grid.Column="1" Style="{StaticResource Label_Centered_20}" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center" BorderBrush="#f5f6f7" BorderThickness="1 0 1 0" Content="股东名称" Height="34" />
                                    <Label Grid.Column="2" Style="{StaticResource Label_Centered_20}" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center" BorderBrush="#f5f6f7" BorderThickness="1 0 1 0" Content="股份比例" Height="34"/>
                                    <Label Grid.Column="3" Style="{StaticResource Label_Centered_20}" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center" BorderBrush="#f5f6f7" BorderThickness="1 0 1 0" Content="出资金额(万元)" Height="34" />
                                    <Label Grid.Column="4" Style="{StaticResource Label_Centered_20}" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center" BorderBrush="#f5f6f7" BorderThickness="1 0 0 0"  Content="出资日期" Height="34" />
                                </Grid>

                                <!--list-->
                                <ListView  Grid.Row="1" x:Name="PartnersListView"  AllowDrop="False" ManipulationBoundaryFeedback="SCManipulationBoundaryFeedback" ScrollViewer.HorizontalScrollBarVisibility="Disabled" ScrollViewer.VerticalScrollBarVisibility="Disabled" Background="Transparent" BorderThickness="0,0,0,0" BorderBrush="White" Visibility="Visible" SelectionChanged="RefereeListView_SelectionChanged" Grid.ColumnSpan="2">
                                    <ListView.ItemContainerStyle>
                                        <Style TargetType="{x:Type ListBoxItem}">
                                            <Setter Property="Height" Value="45" />
                                            <Setter Property="FontSize" Value="15" />
                                            <Setter Property="Background" Value="{Binding Path=Background}"/>
                                            <Setter Property="VerticalContentAlignment" Value="Center" />
                                            <Setter Property="HorizontalContentAlignment" Value="Center" />
                                            <Setter Property="BorderBrush" Value="#F1F1F1" />
                                            <Setter Property="BorderThickness" Value="0,1,1,0" />
                                        </Style>
                                    </ListView.ItemContainerStyle>
                                    <ListView.View>
                                        <GridView ColumnHeaderContainerStyle="{StaticResource hideHeader}">
                                            <GridViewColumn Width="40"  Header="序号">
                                                <GridViewColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <TextBlock Text="{Binding Path=xh}" />
                                                    </DataTemplate>
                                                </GridViewColumn.CellTemplate>
                                            </GridViewColumn>

                                            <GridViewColumn  Width="190"  Header="股东名称">
                                                <GridViewColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <Label Content="{Binding Path=stockName}" FontSize="15" HorizontalContentAlignment="Center"  HorizontalAlignment="Center"/>
                                                    </DataTemplate>
                                                </GridViewColumn.CellTemplate>
                                            </GridViewColumn>

                                            <GridViewColumn  Width="260" Header="股份比例">
                                                <GridViewColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <TextBlock Text="{Binding Path=stockPercent}"  />
                                                    </DataTemplate>
                                                </GridViewColumn.CellTemplate>
                                            </GridViewColumn>
                                            <GridViewColumn  Width="310" Header="出资金额">
                                                <GridViewColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <TextBlock Text="{Binding Path=shouldMoey}"   />
                                                    </DataTemplate>
                                                </GridViewColumn.CellTemplate>
                                            </GridViewColumn>
                                            <GridViewColumn  Width="120"  Header="出资日期">
                                                <GridViewColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <TextBlock Text="{Binding Path=shouldDate}"  />
                                                    </DataTemplate>
                                                </GridViewColumn.CellTemplate>
                                            </GridViewColumn>
                                        </GridView>
                                    </ListView.View>
                                </ListView>

                                <!--无数据时-->
                                <Border x:Name="PartnersMsg"  Visibility="Hidden"  Grid.Row="1" Height="50" VerticalAlignment="Top" BorderBrush="#c5c5c5" BorderThickness="0,0,0,2" Margin="30,0" >
                                    <Label  Content="暂无股权分配信息" Style="{StaticResource Label_Centered_25}" FontSize="23"  BorderBrush="#f5f6f7"  />
                                </Border>

                                <!--下一页-->
                                <Border x:Name="PartnersNextPageBorder" Grid.Row="2" Grid.Column="0" Visibility="Visible" Background="White" BorderBrush="#c5c5c5" BorderThickness="0,2,0,0"  >
                                    <Grid>
                                        <Border Width="250" CornerRadius="10" Background="#ff8d62" Margin="0,3,0,3">
                                            <Button Template="{StaticResource imageButtonTemplate}" Click="NextPage_Click" Tag="Partners">
                                                <Label  Content="加载更多"  FontSize="25" Foreground="White"/>
                                            </Button>
                                        </Border>

                                   </Grid>
                                </Border>
                                <Label x:Name="PartnersNowTotalLabel"  Grid.Row="2" Grid.Column="0" Style="{StaticResource NowTotalLabel}" />
                                <Label x:Name="PartnerstotalLabel"  Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="9" Style="{StaticResource TotalLabel}" />

                            </Grid>

                            <!--投资信息-->
                            <Grid x:Name="InvestmentGrid"  Grid.Row="1" Background="White" Panel.ZIndex="0">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="36"/>
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="48"/>
                                </Grid.RowDefinitions>
                                <!--标题-->
                                <Grid Grid.Row="0" Background="#ade7f6">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="54*"/>
                                        <ColumnDefinition Width="320*"/>
                                        <ColumnDefinition Width="135*"/>
                                        <ColumnDefinition Width="230*"/>
                                        <ColumnDefinition Width="302*"/>
                                    </Grid.ColumnDefinitions>
                                    <Label Grid.Column="0" Style="{StaticResource Label_Centered_20}" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center" BorderBrush="#f5f6f7" BorderThickness="0 0 1 0" Content="序号" />
                                    <Label Grid.Column="1" Style="{StaticResource Label_Centered_20}" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center" BorderBrush="#f5f6f7" BorderThickness="1 0 1 0" Content="被投资企业名称"  />
                                    <Label Grid.Column="2" Style="{StaticResource Label_Centered_20}" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center" BorderBrush="#f5f6f7" BorderThickness="1 0 1 0" Content="出资比例" />
                                    <Label Grid.Column="3" Style="{StaticResource Label_Centered_20}" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center" BorderBrush="#f5f6f7" BorderThickness="1 0 1 0" Content="出资金额" />
                                    <Label Grid.Column="4" Style="{StaticResource Label_Centered_20}" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center" BorderBrush="#f5f6f7" BorderThickness="1 0 0 0"  Content="统一社会信息用代码" />
                                </Grid>

                                <!--list-->
                                <ListView  Grid.Row="1" x:Name="InvestmentListView"  AllowDrop="False" ManipulationBoundaryFeedback="SCManipulationBoundaryFeedback" ScrollViewer.HorizontalScrollBarVisibility="Disabled" ScrollViewer.VerticalScrollBarVisibility="Disabled" Background="Transparent" BorderThickness="0,0,0,0" BorderBrush="White" Visibility="Visible" SelectionChanged="InvestmentListView_SelectionChanged" Grid.ColumnSpan="2">
                                    <ListView.ItemContainerStyle>
                                        <Style TargetType="{x:Type ListBoxItem}">
                                            <Setter Property="Height" Value="45" />
                                            <Setter Property="FontSize" Value="15" />
                                            <Setter Property="Background" Value="{Binding Path=Background}"/>
                                            <Setter Property="VerticalContentAlignment" Value="Center" />
                                            <Setter Property="HorizontalContentAlignment" Value="Center" />
                                            <Setter Property="BorderBrush" Value="#F1F1F1" />
                                            <Setter Property="BorderThickness" Value="0,1,1,0" />
                                        </Style>
                                    </ListView.ItemContainerStyle>
                                    <ListView.View>
                                        <GridView ColumnHeaderContainerStyle="{StaticResource hideHeader}">
                                            <GridViewColumn Width="54"  Header="序号">
                                                <GridViewColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <TextBlock Text="{Binding Path=xh}" />
                                                    </DataTemplate>
                                                </GridViewColumn.CellTemplate>
                                            </GridViewColumn>

                                            <GridViewColumn  Width="320"  Header="被投资企业名称">
                                                <GridViewColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <Label Content="{Binding Path=investedCompany}" FontSize="15" HorizontalContentAlignment="Center"  HorizontalAlignment="Center"/>
                                                    </DataTemplate>
                                                </GridViewColumn.CellTemplate>
                                            </GridViewColumn>

                                            <GridViewColumn  Width="80" Header="出资比例">
                                                <GridViewColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <TextBlock Text="{Binding Path=fundedRatio}"  />
                                                    </DataTemplate>
                                                </GridViewColumn.CellTemplate>
                                            </GridViewColumn>
                                            <GridViewColumn  Width="220" Header="出资金额">
                                                <GridViewColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <TextBlock Text="{Binding Path=regMoney}"   />
                                                    </DataTemplate>
                                                </GridViewColumn.CellTemplate>
                                            </GridViewColumn>
                                            <GridViewColumn  Width="302"  Header="统一社会信用代码">
                                                <GridViewColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <TextBlock Text="{Binding Path=creditCode}"  />
                                                    </DataTemplate>
                                                </GridViewColumn.CellTemplate>
                                            </GridViewColumn>
                                        </GridView>
                                    </ListView.View>
                                </ListView>

                                <!--无数据时-->
                                <Border   x:Name="InvestmentMsg"  Visibility="Hidden" Grid.Row="1" Height="50" VerticalAlignment="Top" BorderBrush="#c5c5c5" BorderThickness="0,0,0,2" Margin="30,0">
                                    <Label  Content="暂无对外投资信息" Style="{StaticResource Label_Centered_25}" FontSize="23"  BorderBrush="#f5f6f7"  />
                                </Border>
                                <!--下一页-->
                                <Border x:Name="InvestmentNextPageBorder" Grid.Row="2" Grid.Column="0" Visibility="Visible" Background="White" BorderBrush="#c5c5c5" BorderThickness="0,2,0,0" Grid.ColumnSpan="2"  >
                                    <Grid>
                                        <Border Width="250" CornerRadius="10" Background="#ff8d62" Margin="0,3,0,3">
                                            <Button Template="{StaticResource imageButtonTemplate}" Click="NextPage_Click" Tag="Investment" >
                                                <Label  Content="加载更多"  FontSize="25" Foreground="White"/>
                                            </Button>
                                        </Border>
                                    </Grid>
                                </Border>


                                <!--弹出用户-->
                                <Label x:Name="InvestmentNowTotalLabel"  Grid.Row="2" Grid.Column="0" Style="{StaticResource NowTotalLabel}" />
                                <Label x:Name="InvestmenttotalLabel"  Grid.Row="2" Grid.Column="1" Style="{StaticResource TotalLabel}" />
                            </Grid>

                            <!--分支机构-->
                            <Grid x:Name="BranchGrid" Grid.Row="1" Background="White" Panel.ZIndex="0">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="36"/>
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="48"/>
                                </Grid.RowDefinitions>
                                <!--标题-->
                                <Grid Grid.Row="0" Background="#ade7f6">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="154*"/>
                                        <ColumnDefinition Width="887*"/>
                                    </Grid.ColumnDefinitions>
                                    <Label Grid.Column="0" Style="{StaticResource Label_Centered_20}" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center" BorderBrush="#f5f6f7" BorderThickness="0 0 1 0" Content="序号" Height="34" />
                                    <Label Grid.Column="1" Style="{StaticResource Label_Centered_20}" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center" BorderBrush="#f5f6f7" BorderThickness="1 0 1 0" Content="分支公司" Height="34" />
                                </Grid>
                                <!--list-->
                                <ListView  Grid.Row="1" x:Name="BranchListView"  AllowDrop="False" ManipulationBoundaryFeedback="SCManipulationBoundaryFeedback" ScrollViewer.HorizontalScrollBarVisibility="Disabled" ScrollViewer.VerticalScrollBarVisibility="Disabled" Background="Transparent" BorderThickness="0,0,0,0" BorderBrush="White" Visibility="Visible" SelectionChanged="BranchListView_SelectionChanged" Grid.ColumnSpan="2">
                                    <ListView.ItemContainerStyle>
                                        <Style TargetType="{x:Type ListBoxItem}">
                                            <Setter Property="Height" Value="45" />
                                            <Setter Property="FontSize" Value="15" />
                                            <Setter Property="Background" Value="{Binding Path=Background}" />
                                            <Setter Property="VerticalContentAlignment" Value="Center" />
                                            <Setter Property="HorizontalContentAlignment" Value="Center" />
                                            <Setter Property="BorderBrush" Value="#F1F1F1" />
                                            <Setter Property="BorderThickness" Value="0,1,1,0" />
                                        </Style>
                                    </ListView.ItemContainerStyle>
                                    <ListView.View>
                                        <GridView ColumnHeaderContainerStyle="{StaticResource hideHeader}">
                                            <GridViewColumn Width="100"  Header="序号">
                                                <GridViewColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <TextBlock Text="{Binding Path=xh}" />
                                                    </DataTemplate>
                                                </GridViewColumn.CellTemplate>
                                            </GridViewColumn>
                                            <GridViewColumn  Width="887"  Header="分支公司">
                                                <GridViewColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <Label Content="{Binding Path=branchesAme}" FontSize="15" HorizontalContentAlignment="Center"  HorizontalAlignment="Center"/>
                                                    </DataTemplate>
                                                </GridViewColumn.CellTemplate>
                                            </GridViewColumn>
                                        </GridView>
                                    </ListView.View>
                                </ListView>

                                <Border x:Name="BranchMsg"  Visibility="Hidden" Grid.Row="1" Height="50" VerticalAlignment="Top" BorderBrush="#c5c5c5" BorderThickness="0,0,0,2" Margin="30,0" >
                                    <Label   Content="暂无信息" Style="{StaticResource Label_Centered_25}" FontSize="23"  BorderBrush="#f5f6f7"  />
                                </Border>
                                <!--无数据时-->

                                <!--下一页-->
                                <Border x:Name="BranchNextPageBorder" Grid.Row="2" Grid.Column="0" Visibility="Visible" Background="White" BorderBrush="#c5c5c5" BorderThickness="0,2,0,0" Grid.ColumnSpan="2"  >
                                    <Grid>
                                        <Border Width="250" CornerRadius="10" Background="#ff8d62" Margin="0,3,0,3">
                                            <Button Template="{StaticResource imageButtonTemplate}" Click="NextPage_Click" Tag="Branch" >
                                                <Label  Content="加载更多"  FontSize="25" Foreground="White"/>
                                            </Button>
                                        </Border>
                                    </Grid>
                                </Border>
                                <!--弹出用户-->
                                <Label x:Name="BranchtotalLabel"  Grid.Row="2" Grid.Column="0" Style="{StaticResource TotalLabel}"   />
                                <Label  x:Name="BranchNowTotalLabel"  Grid.Row="3" Grid.Column="0" Style="{StaticResource NowTotalLabel}"    />
                            </Grid>
                        </Grid>
                    </Grid>
                    
                    <!--知识产权-->
                    <Grid x:Name="PropertyInfoShow" Background="White" Margin="15,15,15,15" Panel.ZIndex="0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="48" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <!--上部-->
                        <Grid >
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Button x:Name="PatentButton" Grid.Column="0" Content="专利" FontSize="20" FontWeight="Bold" Foreground="#ff8160"   BorderThickness="0" Background="#e6f1fb" Margin="0,0,10,3"  Click="Button_PropertyInfo_Click" Tag="Patent"/>
                            <Button x:Name="CopyrightButton" Grid.Column="1" Content="软件著作权" FontSize="20" FontWeight="Bold"  BorderThickness="0"  Background="White"  Margin="10,0,10,3"   Click="Button_PropertyInfo_Click" Tag="Copyright"/>
                        </Grid>

                        <!--专利信息-->
                        <Grid x:Name="PatentGrid" Grid.Row="1" Background="White"  Panel.ZIndex="1">
                            <Grid.RowDefinitions>
