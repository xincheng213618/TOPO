                    </Grid>


                    <!--商标-->
                    <Grid x:Name="TrademarkShow" Background="White" Margin="15,15,15,15" Panel.ZIndex="0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="36"/>
                            <RowDefinition/>
                            <RowDefinition Height="48"/>
                        </Grid.RowDefinitions>
                        <Border Grid.Row="0" Background="#ade7f6" BorderBrush="#f5f6f7" BorderThickness="0 1 0 1" >
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="86*"/>
                                    <ColumnDefinition Width="121*"/>
                                    <ColumnDefinition Width="119*"/>
                                    <ColumnDefinition Width="178*"/>
                                    <ColumnDefinition Width="105*"/>
                                    <ColumnDefinition Width="200*"/>
                                    <ColumnDefinition Width="99*"/>
                                    <ColumnDefinition Width="115*"/>
                                </Grid.ColumnDefinitions>
                                <Label Grid.Column="0" Style="{StaticResource Label_Centered_20}" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center" BorderBrush="#f5f6f7" BorderThickness="0 0 1 0" Content="序号" />
                                <Label Grid.Column="1" Style="{StaticResource Label_Centered_20}" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center" BorderBrush="#f5f6f7" BorderThickness="1 0 1 0" Content="商标名称" />
                                <Label Grid.Column="2" Style="{StaticResource Label_Centered_20}" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center" BorderBrush="#f5f6f7" BorderThickness="1 0 1 0" Content="商标图案" />
                                <Label Grid.Column="3" Style="{StaticResource Label_Centered_20}" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center" BorderBrush="#f5f6f7" BorderThickness="1 0 1 0" Content="申请/注册号" />
                                <Label Grid.Column="4" Style="{StaticResource Label_Centered_20}" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center" BorderBrush="#f5f6f7" BorderThickness="1 0 1 0" Content="申请日期" />
                                <Label Grid.Column="5" Style="{StaticResource Label_Centered_20}" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center" BorderBrush="#f5f6f7" BorderThickness="1 0 1 0" Content="申请人名称" />
                                <Label Grid.Column="6" Style="{StaticResource Label_Centered_20}" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center" BorderBrush="#f5f6f7" BorderThickness="1 0 1 0" Content="商标类型" />
                                <Label Grid.Column="7" Style="{StaticResource Label_Centered_20}" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center" BorderBrush="#f5f6f7" BorderThickness="1 0 0 0" Content="商标状态"  />
                            </Grid>
                        </Border>

                        <ListView x:Name="TradeListView" Grid.Row="1"  AllowDrop="False" ManipulationBoundaryFeedback="SCManipulationBoundaryFeedback" ScrollViewer.HorizontalScrollBarVisibility="Disabled" ScrollViewer.VerticalScrollBarVisibility="Disabled" Background="Transparent" BorderThickness="0,0,0,0" BorderBrush="White" Visibility="Visible" SelectionChanged="TradeListView_SelectionChanged" Grid.ColumnSpan="2">
                            <ListView.ItemContainerStyle>
                                <Style TargetType="{x:Type ListBoxItem}">
                                    <Setter Property="Height" Value="Auto" />
                                    <Setter Property="Background" Value="{Binding Path=Background}"/>
                                    <Setter Property="FontSize" Value="14" />
                                    <Setter Property="HorizontalContentAlignment" Value="Center" />
                                    <Setter Property="VerticalContentAlignment" Value="Center" />
                                    <Setter Property="BorderBrush" Value="#F1F1F1" />
                                    <Setter Property="BorderThickness" Value="0,1,0,0" />
                                    <Setter Property="Focusable" Value="False" />
                                </Style>
                            </ListView.ItemContainerStyle>
                            <ListView.View>
                                <GridView ColumnHeaderContainerStyle="{StaticResource hideHeader}">
                                    <GridViewColumn x:Name="column0brandHeader" Width="50" Header="序号">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding Path=xh}"  />
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                    <GridViewColumn x:Name="column1brandHeader" Width="121" Header="商标名称">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding Path=trademarkName}"  />
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                    <GridViewColumn x:Name="column2brandHeader" Width="119" Header="商标图案">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <Grid MinWidth="{Binding ElementName=column2}">
                                                    <Image Stretch="Uniform" Source="{Binding Path=imageUrl}" Height="100" />
                                                </Grid>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                    <GridViewColumn x:Name="column3brandHeader" Width="178" Header="申请/注册号">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding Path=regNo}" />
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                    <GridViewColumn x:Name="column4brandHeader" Width="105" Header="申请日期">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding Path=appDate}" />
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                    <GridViewColumn x:Name="column5brandHeader" Width="200" Header="申请人名称">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding Path=appCn}" />
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                    <GridViewColumn x:Name="column6brandHeader" Width="80" Header="商标类型">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding Path=intCls}" />
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                    <GridViewColumn x:Name="column7brandHeader" Width="120" Header="商标状态">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding Path=flowStatus}" HorizontalAlignment="Center"/>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                </GridView>
                            </ListView.View>
                        </ListView>
                        <Border x:Name="TrademarkMsg"  Grid.Row="1" Height="50" VerticalAlignment="Top" BorderBrush="#c5c5c5" BorderThickness="0,0,0,2" Margin="30,0" Visibility="Hidden">
                            <Label  Content="暂无商标信息" Style="{StaticResource Label_Centered_25}" FontSize="23"  BorderBrush="#f5f6f7"  />
                        </Border>

                        <Border x:Name="TradeMarkNextPageBorder" Grid.Row="2" Grid.Column="0" Visibility="Visible" Background="White" BorderBrush="#c5c5c5" BorderThickness="0,2,0,0" Grid.ColumnSpan="2"  >
                            <Grid>
                                <Border Width="250" CornerRadius="10" Background="#ff8d62" Margin="0,3,0,3">
                                    <Button Template="{StaticResource imageButtonTemplate}" Click="NextPage_Click" Tag="TradeMark" >
                                        <Label  Content="加载更多"  FontSize="25" Foreground="White"/>
                                    </Button>
                                </Border>
                            </Grid>
                        </Border>
                        <Label x:Name="TradeMarkNowTotalLabel"  Grid.Row="2" Grid.Column="0" Style="{StaticResource NowTotalLabel}" Margin="0,11" />
                        <Label x:Name="TradeMarktotalLabel"  Grid.Row="2" Grid.Column="1" Style="{StaticResource TotalLabel}" Margin="0,11" />
                    </Grid>

                </Grid>



            </Grid>

        </Grid>



    </Grid>
</Page>
