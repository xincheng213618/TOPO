                    </Grid.ColumnDefinitions>
                    <Button Grid.Column="1" Template="{StaticResource imageButtonTemplate}" Click="Button_Click" Tag="XinHuaQiYeXinXi">
                        <Grid>
                            <Image Source="images/search4.png" Stretch="Uniform" Margin="25"/>
                        </Grid>
                    </Button>
                    <Button Grid.Column="3"  Template="{StaticResource imageButtonTemplate}" Click="Button_Click" Tag="CreditChinaQiYeXinXi">
                        <Grid>
                            <Image Source="images/creditchina.png" Stretch="Uniform" Margin="25"/>
