                <Grid.RowDefinitions>
                    <RowDefinition Height="90"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
               
                <Label Grid.Column="0" Grid.ColumnSpan="9" Grid.Row="0" Grid.RowSpan="3"  Content="请选择要查询的内容" FontSize="50"  FontWeight="Bold" Foreground="#3ce0e9" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="20" FontFamily="微软雅黑"/>
