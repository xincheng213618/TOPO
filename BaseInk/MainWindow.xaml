<Window x:Class="BaseInk.InkWindows"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BaseInk"
        mc:Ignorable="d"
        Height="400 "  Activated="Window_Activated"  Width="800" Focusable="False" AllowsTransparency="True" WindowStyle="None" Background="Transparent" Initialized="Window_Initialized">
    <Border Background="#DADADA" Margin="5,0,5,5" Focusable="False" >
        <Border.Effect>
            <DropShadowEffect BlurRadius="10" ShadowDepth="0" Opacity="0.8"/>
        </Border.Effect>
        <Grid >
            <Grid.RowDefinitions>
                <RowDefinition Height="53" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions >
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="53" />
            </Grid.ColumnDefinitions>
            <Button Grid.Row="0" Grid.Column="1" Click="Exit" Focusable="False" Margin="4,0,0,4">
                <Button.Template>
                    <ControlTemplate>
                        <Border Background="White">
                            <Label Content="X" Focusable="False" Foreground="Black" FontSize="20"  HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>
            <Grid Grid.Row="1" Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Label Grid.Row="0" Content="移动" Focusable="False" Foreground="Black" Background="White" Margin="4,0,0,24"  MouseLeftButtonDown="Window_MouseDrag" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="20" />
                <Button Focusable="False"  Click="Fun_Click" Margin="4,67,0,45" Grid.RowSpan="2" >
                    <Button.Template>
                        <ControlTemplate>
                            <Border Background="White" >
                                <Label Content="中" Focusable="False" Foreground="Black"  FontSize="20" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
                <Button Grid.Row="1" Focusable="False" Click="Clear_Click" Margin="4,46,0,67" Grid.RowSpan="2" >
                    <Button.Template>
                        <ControlTemplate>
                            <Border Background="White" >
                                <Label Content="清空" Focusable="False" Foreground="Black"  FontSize="20" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>

                </Button>
                <Button Grid.Row="2" Focusable="False"   Click="Delete_Click" Margin="3,25,1,0" >
                    <Button.Template>
                        <ControlTemplate>
                            <Border Background="White" >
                                <Label Content="删除" Focusable="False" Foreground="Black"  FontSize="20" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
                <Button Grid.Row="3" Focusable="False"   Click="Button_Click" Margin="3,15,1,10"    >
                    <Button.Template>
                        <ControlTemplate>
                            <Border Background="White" >
                                <Label Content="键盘" Focusable="False" Foreground="Black"  FontSize="20" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </Grid>
            <ListView  x:Name="ListVierew" Focusable="False"  Background="White"  ScrollViewer.HorizontalScrollBarVisibility="Disabled" ScrollViewer.VerticalScrollBarVisibility="Disabled" Margin="0,-20,0,0"  SelectionChanged="ListVierew_SelectionChanged">
                <ListView.ItemContainerStyle >
                    <Style TargetType="{x:Type ListBoxItem}">
                        <Setter Property="Width" Value="70" />

                    </Style>
                </ListView.ItemContainerStyle>
                <ListView.ItemsPanel>
                    <ItemsPanelTemplate>
                        <VirtualizingStackPanel  Orientation="Horizontal" ></VirtualizingStackPanel>
                    </ItemsPanelTemplate>
                </ListView.ItemsPanel>
                <ListView.View>
                    <GridView>
                        <GridViewColumn >
                            <GridViewColumn.CellTemplate>
                                <DataTemplate  >
                                    <Grid Width="40">
                                        <Label Focusable="False" Content="{Binding Path=Content111}" HorizontalAlignment="Center"   FontSize="20"/>
                                    </Grid>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                    </GridView>
                </ListView.View>

            </ListView>


            <Border Grid.Row="1" Name="ink" Visibility="Visible">
                <InkCanvas x:Name="inkCanvas" Focusable="False"  StrokeCollected="InkCanvas_StrokeCollected" Background="#f5f6f7" Margin="0,0,0,0" />
            </Border>
            <Border Grid.Row="1" Name="key" Visibility="Collapsed">
                <Grid  >
                    <WrapPanel Name="sk2"   Margin="0,67,0,218"  Focusable="False" >
                        <Button Name="list" Visibility="Collapsed" Focusable="False" BorderThickness="5" HorizontalContentAlignment="Center" BorderBrush="Transparent" Width="40" Content="A" FontSize="2" Height="40" Click="Button_Click"/>
                    </WrapPanel>
                    <WrapPanel Name="sk"   Margin="0,0,0,285" Focusable="False" RenderTransformOrigin="0.5,0.5" />
                    <WrapPanel Name="sk3" Margin="0,135,0,150"  Focusable="False" >
                    </WrapPanel>

                    <WrapPanel Name="sk4" Margin="0,197,0,88"  Focusable="False" >
                    </WrapPanel>
                    <TextBox TextChanged="tx_TextChanged"  TabIndex="0" x:Name="tx" Width="0" Height="0"></TextBox>
                    <Button   Content="大写" Focusable="False" HorizontalAlignment="Left" Margin="620,297,0,0" VerticalAlignment="Top" Name="btn1" Width="75" Click="Button_Click_1" Height="30" RenderTransformOrigin="0.5,0.5"/>
                    <Button Content="英" Focusable="False" HorizontalAlignment="Left" Margin="510,297,0,0" VerticalAlignment="Top" Width="80" Click="Button_Click_2" Height="30"/>

                </Grid>

            </Border>
        </Grid>

    </Border>

</Window>
